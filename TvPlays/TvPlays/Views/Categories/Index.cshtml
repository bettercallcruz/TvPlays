@model IEnumerable<TvPlays.Models.Categories>

@{
    ViewBag.Title = "Index";
    Layout = null;

}

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("New Category", "Create")
    </p>

    <hr />
}



<div class="carouselContainer container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {

                if (item.ID == 1)
                {
                    <div class="carousel-item active">
                        <img src="@Url.Action("Image", new { imagePath = item.PathToCategory })" class="d-block w-100" alt="...">
                        <div style="text-align:center">
                            @if (User.IsInRole("Admin"))
                            {
                                @Html.ActionLink("Edit Category", "Edit", new { id = item.ID }) <br /> @Html.ActionLink("Expand Category", "Details", new { id = item.ID })
                            }
                            else
                            {
                                @Html.ActionLink("Expand Category", "Details", new { id = item.ID })
                            }
                        </div>
                    </div>
                }
                <div class="carousel-item">
                    <img src="@Url.Action("Image", new { imagePath = item.PathToCategory })" class="d-block w-100" alt="...">
                    <div style="text-align:center">
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Edit Category", "Edit", new { id = item.ID }) <br /> @Html.ActionLink("Expand Category", "Details", new { id = item.ID })
                        }
                        else
                        {
                            @Html.ActionLink("Expand Category", "Details", new { id = item.ID })
                        }
                    </div>

                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" style="z-index:1">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" style="z-index:1">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


