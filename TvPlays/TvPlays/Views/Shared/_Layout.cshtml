<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - TvPlays </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/Clips.css" />
    <link rel="stylesheet" href="~/Content/register.css" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("TvPlays", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Clips", "Index", "Clips", new { area = "" }, new { @class = "nav-link" })
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item active">
                        @Html.ActionLink("Utilizadores", "Index", "Utilizadores", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Role", "Index", "Role", new { area = "" }, new { @class = "nav-link" })
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="body-content container-fluid">
        @RenderBody()
    </div>

    <footer class="footer-bs">
        <hr />
        <div class="row row-eq-height">
            <div class="IPTcol col footer-nav animated fadeInDown">
                <img src="~/Content/logoIPT.jpg" class="imgFooter img"/>
            </div>
            <div class="PROFcol col footer-nav animated fadeInUp">
                <div class="PROFrow row">
                    <h5><b>Tecnologias de Internet II</b></h5>
                    <br />
                    <p><b>Professor: </b>José Casimiro Pereira</p>
                </div>
            </div>
            <div class="Alunoscol col footer-social animated fadeInDown">
                <div class="AlunosRow row">
                    <h5><b>Alunos</b></h5>
                    <ul>
                        <li>Ricardo Bernardes nº19446</li>
                        <li>Pedro Cruz nº19442</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
