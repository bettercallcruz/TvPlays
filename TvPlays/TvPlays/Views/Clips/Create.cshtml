@model TvPlays.Models.Clips

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


    
<div class="form-horizontal">
    <h4>Clips</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @using (Html.BeginForm("Create", "Clips", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.TitleClip, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TitleClip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TitleClip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Categorias</span>
            <div class="col-md-10">
                @{ string selected = "";}
                @foreach (var item in ViewBag.ListCategories)
                {
                    <input type="checkbox" name="categoriasEscolhidas" value="@item.ID" @selected /> @item.Name
                    <br />
                }
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ficheiro Clip:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileupload" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }





</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
